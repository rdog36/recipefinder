<h1> Searching for - <%= @search_term %> </h1>

<table border="1">
	<tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even','odd')%>>
			<td><%= link_to image_tag(recipe["image_url"], width: '100', height: '100'), recipe["f2f_url"]%></td>
			<td><a href=<%= recipe["f2f_url"] %>><%= title = sanitize recipe["title"] %></a></td>
			<td><%= recipe["social_rank"] %></td>
		</tr>
	<% end %>
</table>